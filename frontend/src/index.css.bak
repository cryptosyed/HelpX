@tailwind base;
@tailwind components;
@tailwind utilities;

/* small helpers */
:root {
  --bg: #f8fafc;
  --text: #0f172a;
}

body {
  @apply bg-slate-50 text-slate-900; /* valid Tailwind utilities */
  font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

a { @apply text-blue-600 hover:underline; }
button { @apply rounded-md; }